{% extends 'base.html.twig' %}

{% block title %}Connexion au back-office{% endblock %}

{% block body %}
<div class="container w-50" >
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 mt-5 font-weight-normal">Se connecter au back-office</h1>
        <label for="username">Email</label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Se souvenir de moi</label>
            </div>
       
        <div class="row">
            <div class="col-6">
                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
            </div>
            <div class="col-6">
                Pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}
